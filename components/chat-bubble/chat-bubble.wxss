/* 按钮样式 */
.action-btn {
  flex: 1;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  outline: none;
  transition: all 0.3s ease;
}

.action-btn.confirm {
  background: #4A90E2;
  color: white;
}

.action-btn.modify {
  background: transparent;
  color: #666;
  border: 2rpx solid #ddd;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 加载状态 */
.bubble-loading {
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.loading-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
  animation: loading 1.4s infinite ease-in-out;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes loading {
  0%, 60%, 100% {
    transform: translateY(0);
  }
  30% {
    transform: translateY(-10rpx);
  }
} 

