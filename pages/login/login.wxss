/* pages/login/login.wxss */
.page-container {
  padding: 40rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-container {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  background-color: transparent;
  margin-bottom: 60rpx;
}
.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #eee;
}

.avatar-tip {
  color: #909399;
  font-size: 26rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f3f5;
}

.item-label {
  width: 150rpx;
  font-size: 32rpx;
  color: #303133;
}

.item-input {
  flex-grow: 1;
  font-size: 32rpx;
}

.save-btn {
  margin-top: 60rpx;
  background-color: var(--primary-color);
  color: white;
  font-weight: bold;
} 