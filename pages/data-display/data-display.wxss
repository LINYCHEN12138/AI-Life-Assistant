/* pages/data-display/data-display.wxss */
.page-container {
  padding: 20rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.data-textarea {
  width: 100%;
  flex-grow: 1;
  background-color: #f5f5f5;
  border: 1rpx solid #eee;
  padding: 15rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.copy-btn {
  flex-shrink: 0;
  background-color: var(--primary-color);
  color: white;
} 