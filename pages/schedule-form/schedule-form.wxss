/* pages/schedule-form/schedule-form.wxss */
.container {
  padding: 30rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 10rpx 30rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f3f5;
}

.form-group:last-child {
  border-bottom: none;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #fa5151;
  margin-right: 8rpx;
  font-size: 28rpx;
}

.form-input,
.picker-input {
  font-size: 28rpx;
  color: #333;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.picker-input.placeholder {
  color: #999;
}

.form-row {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  border-bottom: 1rpx solid #f2f3f5;
}

.form-row .form-group {
  flex: 1;
  border-bottom: none;
  padding-right: 0;
}

.form-textarea {
  font-size: 28rpx;
  color: #333;
  width: 100%;
  height: 200rpx;
  padding: 10rpx 0;
}

.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  padding-bottom: env(safe-area-inset-bottom, 20rpx);
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.save-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.save-btn[disabled] {
  background: #c8c9cc;
  color: #fff;
} 